<!--        <item name="android:paddingRight">@dimen/control_dp16</item>-->
<!--        <item name="android:paddingTop">@dimen/control_dp8</item>-->
<!--        <item name="android:paddingBottom">@dimen/control_dp8</item>-->
    </style>

    <style name="windowTitleStyle" parent="RtlOverlay.DialogWindowTitle.AppCompat" >
        <item name="android:textAppearance">@style/windowTitleTextStyle</item>
    </style>
</resources>