<com.alipay.hulu.ui.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/control_dp8"
    android:paddingLeft="@dimen/control_dp16"
    android:duplicateParentState="true"
    android:paddingRight="@dimen/control_dp16">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_alignParentRight="true"
        android:id="@+id/record_manage_check"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/record_manage_check"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/record_name"
        android:gravity="left|center_vertical"
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/textsize_16"/>
</com.alipay.hulu.ui.CheckableRelativeLayout>