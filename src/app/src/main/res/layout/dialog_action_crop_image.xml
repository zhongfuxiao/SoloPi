<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/control_dp8"
    android:paddingRight="@dimen/control_dp8"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_18"
        android:layout_marginTop="@dimen/control_dp8"
        android:layout_marginLeft="@dimen/control_dp16"
        android:textColor="@color/primaryText"
        android:layout_marginBottom="@dimen/control_dp8"
        android:text="@string/crop__select_action_area"/>
    <com.theartofdev.edmodo.cropper.CropImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_action_crop_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:cropScaleType="centerCrop"
        custom:cropGuidelinesColor="@color/colorAccentTransparent"
        custom:cropBorderLineColor="@color/colorAccentTransparent"
        />
</LinearLayout>