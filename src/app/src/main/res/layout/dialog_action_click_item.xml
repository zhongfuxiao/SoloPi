<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/control_dp16"
    android:paddingRight="@dimen/control_dp16"
    android:paddingTop="@dimen/control_dp8"
    android:paddingBottom="@dimen/control_dp8">

    <TextView
        android:id="@+id/dialog_action_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/float_item_text_size"
        android:layout_weight="1"
        />
    <ImageView
        android:id="@+id/dialog_action_icon"
        android:layout_width="@dimen/float_item_icon_size"
        android:layout_marginLeft="@dimen/control_dp8"
        android:scaleType="fitCenter"
        android:layout_height="@dimen/float_item_icon_size" />
</LinearLayout>