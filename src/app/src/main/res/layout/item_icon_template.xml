<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/item_icon_template_icon"
        android:layout_width="@dimen/control_dp24"
        android:layout_height="@dimen/control_dp24"
        android:src="@drawable/icon_scan"/>

    <TextView
        android:id="@+id/item_icon_template_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/control_dp2"
        android:textSize="@dimen/textsize_9"
        android:textColor="@color/white"
        android:gravity="center"
        android:text=""/>

</LinearLayout>